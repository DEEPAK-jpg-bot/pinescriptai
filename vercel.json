{
    "version": 2,
    "functions": {
        "api/index.py": {
            "maxDuration": 60,
            "excludeFiles": "{node_modules,src,public,build,package-lock.json,tailwind.config.js,postcss.config.js,*.sql,*.md,*.txt}/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}